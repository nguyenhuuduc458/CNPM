@model MVCPage.ViewModel.PhieuKhamEditVM
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="PhieuKham" asp-method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <input asp-for="PhieuKhamEdit.Id" class="form-control"  type="hidden"/>
                <span asp-validation-for="PhieuKhamEdit.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="PhieuKhamEdit.MaBenhNhan" class="form-control"  type="hidden"/>
                <span asp-validation-for="PhieuKhamEdit.MaBenhNhan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhieuKhamEdit.TenBenhNhan" class="control-label"></label>
                <input asp-for="PhieuKhamEdit.TenBenhNhan" class="form-control" disabled />
                <span asp-validation-for="PhieuKhamEdit.TenBenhNhan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="PhieuKhamEdit.MaNhanVien" class="form-control" />
                <span asp-validation-for="PhieuKhamEdit.MaNhanVien" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label class="control-label">Tên Bác Sỹ</label>
                <input type="Text" class="form-control"  asp-for="PhieuKhamEdit.TenBacSy" disabled />
            </div>
            <div class="form-group">
                <label asp-for="PhieuKhamEdit.TrieuChung" class="control-label"></label>
                <select asp-for="PhieuKhamEdit.TrieuChung" class="form-control">
                    <option value="@ViewData["TrieuChung"]">@ViewData["TrieuChung"]</option>
                    @foreach (var item in Model.listBenh){
                      <option value="@item.TenBenh">@item.TenBenh</option> 
                    }
                </select>
                <span asp-validation-for="PhieuKhamEdit.TrieuChung" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="PhieuKhamEdit.NgayKham" class="control-label"></label>
                <input asp-for="PhieuKhamEdit.NgayKham" class="form-control" readonly/>
                <span asp-validation-for="PhieuKhamEdit.NgayKham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type = "submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a>
